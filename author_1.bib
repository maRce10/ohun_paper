   keywords = {Alleles,Animal,Animals,Biological Evolution,Choice Behavior,Female,Fertility,Fertility: genetics,Genetic,Genotype,Male,Models,Mutagenesis,Reproduction,Reproduction: genetics,Selection,Sex Characteristics,Sex Ratio,Sexual Behavior,Survival Rate},
   month = {7},
