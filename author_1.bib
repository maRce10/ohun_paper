   issue = {8},
   journal = {Evolution},
   keywords = {Animals,Biological Evolution,Ecology,Genetic,Genetic Variation,Geography,Picea,Picea: genetics,Picea: physiology,Sciuridae,Sciuridae: genetics,Sciuridae: physiology,Selection,Songbirds,Songbirds: genetics,Songbirds: physiology},
   month = {8},
   pages = {1663-72},
   pmid = {12353759},
   title = {Diversifying coevolution between crossbills and black spruce on Newfoundland.},
   volume = {56},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/12353759},
