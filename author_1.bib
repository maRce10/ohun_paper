   issn = {15577023},
   issue = {5},
   journal = {Integrative and Comparative Biology},
   pages = {1004-1021},
   title = {Understanding Biological Roles of Venoms among the Caenophidia: The Importance of Rear-Fanged Snakes},
   volume = {56},
   year = {2016},
}
