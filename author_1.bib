   journal = {Behavioral Ecology and Sociobiology},
   keywords = {Begging call,Bioacoustics distance,Brood parasite,Spectro-temporal modulation,Spectrogram alignment},
   pages = {1915-1926},
   title = {Bioacoustic distances between the begging calls of brood parasites and their host species: a comparison of metrics and techniques},
   volume = {64},
   url = {http://link.springer.com/article/10.1007/s00265-010-1065-2},
