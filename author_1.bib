   issue = {10},
   journal = {Behavioral Ecology and Sociobiology},
   keywords = {Acoustic communication,Good gene models of sexual selection,Mate choice,Mixed models,Personality,Plasticity},
   title = {Short- and long-term repeatability and pseudo-repeatability of bird song: sensitivity of signals to varying environments},
   volume = {71},
