   title = {The inflected alarm caw of the American crow: differences in acoustic structure among individuals and sexes},
   volume = {108},
   url = {http://www.bioone.org/perlserv/?request=get-abstract&doi=10.1650%2F0010-5422(2006)108%5B518%3ATIACOT%5D2.0.CO%3B2},
