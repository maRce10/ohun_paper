   keywords = {Adaptation,Animals,Biological,Biological Evolution,Genetic,Selection},
   month = {9},
   pages = {581-98},
   pmid = {42062},
   title = {The spandrels of San Marco and the Panglossian paradigm: a critique of the adaptationist programme},
   volume = {205},
   url = {http://rspb.royalsocietypublishing.org/content/205/1161/581.short http://www.ncbi.nlm.nih.gov/pubmed/42062},
   year = {1979},
}
