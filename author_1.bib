   keywords = {Cooperative breeding,Flight call,Individual recognition,Kin recognition,Lamprotornis superbus,Vocal communication},
   pages = {1279-1285},
   pmid = {24137044},
   title = {Flight calls signal group and individual identity but not kinship in a cooperatively breeding bird},
   volume = {24},
   year = {2013},
}
