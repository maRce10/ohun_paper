   keywords = {Animals,Birds,Birds: anatomy & histology,Birds: genetics,Body Weights and Measures,Intestine, Small,Intestine, Small: anatomy & histology,Mammals,Mammals: anatomy & histology,Mammals: genetics,Models, Biological,Phylogeny,Regression Analysis,Software,Species Specificity},
   pages = {526-50},
