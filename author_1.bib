@article{Deoniziak2019,
   abstract = {Songs of urban males were found to be more complex than in conspecifics from natural forest populations. Urban dwellers possessed greater syllable repertoires and repeated syllable sequences more often. In addition, they used a smaller proportion of whistles and a higher proportion of twitter syllables when singing compared to the non‑ urban males. Moreover, we found significant differences in the minimum and peak frequency of the whistle syllable between studied populations},
