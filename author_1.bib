   keywords = {Animal,Animals,Female,Fertility,Male,Noise,Songbirds,Songbirds: physiology,Urban Renewal,Vocalization},
   month = {8},
   pages = {14549-54},
   title = {Low-frequency songs lose their potency in noisy urban conditions.},
   volume = {108},
   url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3167545&tool=pmcentrez&rendertype=abstract},
   year = {2011},
}
