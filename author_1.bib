   keywords = {Animals,Bias (Epidemiology),Birds,Computer Simulation,Demography,Environmental Monitoring,Mammals,Models, Biological,Ontario,Plants,Reptiles},
   month = {1},
   pages = {181-97},
   pmid = {19323182},
   title = {Sample selection bias and presence-only distribution models: implications for background and pseudo-absence data.},
   volume = {19},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/19323182},
