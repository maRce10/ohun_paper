   issn = {00129658},
   issue = {8},
   journal = {Ecology},
   pages = {2428-2436},
   pmid = {20836464},
   title = {Bill size and dimorphism in tidal-marsh sparrows: island-like processes in a continental habitat.},
   volume = {91},
