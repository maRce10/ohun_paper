@article{ISI:000453088300024,
   abstract = {Recently, Pearse et al. explored the macroecology of passerine song
using a large citizen science database of bird songs and machine
learning techniques. They used standard deviation of frequency (SDF) as
a surrogate for song complexity, finding only weak support for
correlation between SDF and life-history traits such as monogamy and
