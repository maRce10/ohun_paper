   keywords = {008,04,10,1016,2015,6 max,a,b,barron,c,citation,cleland,definitions,doi,e,embracing multiple definitions of,experience dependence,fitzpatrick,function,hauber,hebets,in press,j,l,learning,m,mechanism,plasticity,r,stevens,t,tins,trends in neurosciences},
   pages = {1-12},
   title = {Embracing multiple definitions of learning},
   year = {2015},
}
