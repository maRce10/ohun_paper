   pages = {10112-10119},
   pmid = {25964342},
   title = {Major evolutionary transitions in individuality},
   volume = {112},
   url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1421402112},
   year = {2015},
}
@article{Pridmore2011,
