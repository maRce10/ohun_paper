   editor = {Cheryl S. Rosenfeld},
   isbn = {1111111111},
   issn = {1932-6203},
   issue = {12},
   journal = {PLOS ONE},
   keywords = {Acoustic signals,Acoustics,Bioacoustics,Cultural anthropology,Primates,Principal component analysis,Syllables,Vocalization},
   month = {12},
   pages = {e0218006},
   publisher = {Public Library of Science},
   title = {On reappearance and complexity in musical calling},
