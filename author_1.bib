   keywords = {American black duck,Bayes??? theorem,Bayesian modelling,carry-over effects,density dependence,full annual cycle model,migratory populations,model selection,waterfowl},
   pages = {670-678},
   title = {Disentangling density-dependent dynamics using full annual cycle models and Bayesian model weight updating},
   volume = {54},
