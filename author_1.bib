   keywords = {ac,ancestral reconstruction,cochlea,com,correspondence,echolocation,gmail,hearing,j,kalinadavies,qmul,rossiter,s,traits,uk},
   pages = {2},
   pmid = {23360746},
   title = {Evolutionary origins of ultrasonic hearing and laryngeal echolocation in bats inferred from morphological analyses of the inner ear.},
   volume = {10},
   url = {http://www.frontiersinzoology.com/content/10/1/2%5Cnhttp://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3598973&tool=pmcentrez&rendertype=abstract},
