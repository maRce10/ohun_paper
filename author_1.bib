   keywords = {Evolutionary radiation,Macroevolution,Phylogeny},
   pages = {13410-13414},
   pmid = {19633192},
   publisher = {National Academy of Sciences},
   title = {Nine exceptional radiations plus high turnover explain species diversity in jawed vertebrates},
   volume = {106},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/19633192 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2715324},
