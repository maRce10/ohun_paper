   doi = {10.1007/BF00299740},
   issn = {03405443},
   issue = {3},
   journal = {Behavioral Ecology and Sociobiology},
   pages = {271-290},
   title = {Sound transmission and its significance for animal vocalization - I. Temperate habitats},
   volume = {2},
   year = {1977},
}
