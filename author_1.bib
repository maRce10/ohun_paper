   isbn = {1365-2435},
   issn = {02698463},
   issue = {4},
   journal = {Functional Ecology},
   keywords = {Fabaceae,Nitrogen,Phosphorus,Phylogeny,Plant functional type,Stable isotopes,Stoichiometry},
