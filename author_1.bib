   journal = {Behavioral Ecology},
   keywords = {Acoustic localization,Communication,Greater sage grouse,Multiple traits,Plasticity,Sexual selection,Trade-off},
   pages = {97-106},
   title = {Tactical allocation of effort among multiple signals in sage grouse: An experiment with a robotic female},
